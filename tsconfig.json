{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "flora": [
        "dist/flora/flora",
        "dist/flora"
      ],
      "@flora/lib/*": [
        "projects/flora/src/lib/*"
      ],
    },
    "resolveJsonModule": true
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}